{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@setup/*": [
        "./src/setup/*"
      ],
      "@mocks/*": [
        "./src/REST/mocks/*"
      ],
      "@bus/*": [
        "./src/bus/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@REST/*": [
        "./src/REST/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@public/*": [
        "./public/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}